<script>
 function shuffleCards(containerSelector) {
  const container = document.querySelector(containerSelector);
  if (!container) return;

  // Step 1: Extract cards into an array
  const cards = Array.from(container.querySelectorAll('article.card'));

  // Step 2: Fisher-Yates shuffle in memory
  for (let i = cards.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [cards[i], cards[j]] = [cards[j], cards[i]];
  }

  // Step 3: Remove all cards from container
  while (container.firstChild) {
    container.removeChild(container.firstChild);
  }

  // Step 4: Append shuffled cards back to container
  cards.forEach(card => container.appendChild(card));
}

// Call shuffleCards on your container
shuffleCards('.container');
</script>
