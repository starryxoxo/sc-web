<script>
function isStableBrowser() {
  // Example simple check for browsers by user agent (can be refined)
  const ua = navigator.userAgent;
  return /Chrome|Firefox|Safari|Edge/.test(ua) && !/WebView/.test(ua);
}

if (!isStableBrowser()) {
  alert("For the best experience, please use a stable modern browser like Chrome, Firefox, Safari, or Edge.");
}
</script>