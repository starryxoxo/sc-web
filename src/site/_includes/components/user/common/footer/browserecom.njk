<script>
function getBrowserName() {
  const ua = navigator.userAgent;

  // Detect stable mainstream browsers
  if (/Edg/.test(ua)) return "Edge";
  if (/OPR|Opera/.test(ua)) return "Opera";
  if (/Chrome/.test(ua) && !/Edg/.test(ua) && !/OPR/.test(ua)) return "Chrome";
  if (/Firefox/.test(ua)) return "Firefox";
  if (/Safari/.test(ua) && !/Chrome/.test(ua)) return "Safari";

  // Detect common embedded/in-app browsers (add as needed)
  if (ua.indexOf("FBAN") > -1 || ua.indexOf("FBAV") > -1) return "FacebookInAppBrowser";
  if (ua.indexOf("Instagram") > -1) return "InstagramInAppBrowser";
  if (ua.indexOf("Twitter") > -1) return "TwitterInAppBrowser";
  if (ua.indexOf("LinkedInApp") > -1) return "LinkedInInAppBrowser";
  
  return "Unknown";
}

function isEmbeddedBrowser() {
  const embeddedBrowsers = [
    "FacebookInAppBrowser",
    "InstagramInAppBrowser",
    "TwitterInAppBrowser",
    "LinkedInInAppBrowser"
  ];
  return embeddedBrowsers.includes(getBrowserName());
}

if (isEmbeddedBrowser()) {
  alert("For the best experience, please use a stable modern browser like Chrome, Firefox, Safari, Edge, or the like.");
}
</script>