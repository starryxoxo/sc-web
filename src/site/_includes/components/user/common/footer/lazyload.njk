<script>
 // To make up for long loading times
document.addEventListener('DOMContentLoaded', () => {
  const maxLoadTime = 5000; // 5 seconds threshold
  const loadingMessage = "It seems we're having some time troubles. Try refreshing the webpage.";

  const startTime = performance.timing.navigationStart;

  window.onload = () => {
    const loadTime = Date.now() - startTime;

    if (loadTime > maxLoadTime) {
      // Assuming you have an element on your loading screen to show messages
      const loadingScreen = document.getElementById('loading-message');
      if (loadingScreen) {
        loadingScreen.textContent = loadingMessage;
      } else {
        // Or create and show a message dynamically
        const messageElem = document.createElement('div');
        messageElem.style.position = 'fixed';
        messageElem.style.top = '0';
        messageElem.style.width = '100%';
        messageElem.style.backgroundColor = '#f8d7da';
        messageElem.style.color = '#721c24';
        messageElem.style.padding = '10px';
        messageElem.style.textAlign = 'center';
        messageElem.style.zIndex = '1000';
        messageElem.textContent = loadingMessage;
        document.body.appendChild(messageElem);
      }
    }
  };
});
</script>